<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/public/css/search_result.css">

</head>

<body>
    <br><br>
    <div class="abc d-flex flex-column ">
        <div class="sort d-flex align-items-center">
            <div class="sub-section-title align-self-center">
                Sort by:
            </div>
            <input type="radio" name="sort" id="relevance">
            <label for="relevance">Relavence</label>
            <input type="radio" name="sort" id="salary">
            <label for="salary">Salary high to small</label>
            <input type="radio" name="sort" id="urgent">
            <label for="urgent">Urgent Hiring</label>
        </div>
        <div class="d-flex">
            <div class="result-list-slider d-inline-flex">
                {{#each jobs}}
                <a href="/jobs/{{this._id}}" class="result-item d-inline-flex">
                    <img src="/src/public/img/Logo/Company_TuDo.svg" alt="logo" class="mr-3">
                    <div class="infor d-inline-flex align-items-start flex-column">
                        <div class="job-name">
                            {{this.Title}}
                        </div>
                        <div class="company">
                            {{this.CompanyID.Name}}
                        </div>
                        <div class="mt-auto tag d-flex align-items-start">
                            <div class="location">
                                {{this.JobDetailsID.Location}}
                            </div>
                            <div class="time">
                                Close Job Date: {{this.EndDay}}
                            </div>
                        </div>
                    </div>
                    <div class="action d-inline-flex align-items-end flex-column ">
                        <div class="mb-auto salary">{{this.Salary}}</div>
                        <div class="act-btn d-flex align-items-center">
                            <label class="bookmark-btn mr-3">
                                <input type="checkbox" class="bookmark-checkbox" id="bookmarkToggle" />
                                <span class="bookmark-icon" id="bookmarkIcon">
                                    <img src="/src/public/img/Save_Inactive.svg" alt="Bookmark" />
                                </span>
                            </label>

                            <button type="submit" class="btn btn-primary">
                                Apply Now
                                <img src="/src/public/img/Chevron Right.svg" alt="arrow">
                            </button>
                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</body>