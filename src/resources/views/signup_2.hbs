<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/public/css/signup_2.css">
</head>
<body>
    <div class="top text-center mt-5">
        <img src="/src/public/img/Logo/logo-01 1 (1).svg" class="custom-logo" alt="logo">
        <h1>Sign Up</h1>
        <p>Joblane - Your Journey to the Right Job!</p>
    </div>
    
    <form class="mb-5 w-30 mx-auto" id="signup" action="/update-account" method="post">
        <div class="form-group mb-3">
            <label for="exampleInputName1">Name</label>
            <input type="text" class="form-control" name="Name" id="Name">
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" name="Email" id="Email">
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="Password" id="Password">
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputPassword2">Confirm Password</label>
            <input type="password" class="form-control" name="CPassword" id="CPassword">
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" name="check" id="exampleCheck1">
            <label class="form-check-label ml-2" for="exampleCheck1">I agree with Terms and Privacy</label>
        </div>
        <div class="form-group">
            <button type="submit">Sign up</button>
        </div>
        <div class="ml-5">
            <span>Already have an account?</span>
            <a href="#">Log in</a>
        </div>
        
    </form>


</body>
<script>
// Lưu trạng thái form vào sessionStorage khi form thay đổi
function saveFormState() {
  const name = document.getElementById('Name').value;
  const email = document.getElementById('Email').value;
  // Lưu giá trị khác theo cách tương tự

  sessionStorage.setItem('signupForm', JSON.stringify({ name, email }));
}

// Đính kèm sự kiện 'change' hoặc 'input' để lưu trạng thái form
document.getElementById('Name').addEventListener('input', saveFormState);
document.getElementById('Email').addEventListener('input', saveFormState);
// Lắng nghe sự kiện cho các input khác tương tự
</script>
<script>
window.onload = function() {
  // Khôi phục trạng thái form từ sessionStorage
  const savedData = JSON.parse(sessionStorage.getItem('signupForm'));
  if (savedData) {
    document.getElementById('Name').value = savedData.name || '';
    document.getElementById('Email').value = savedData.email || '';
    // Khôi phục giá trị khác theo cách tương tự
  }
}
</script>

